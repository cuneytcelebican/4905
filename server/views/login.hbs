<div class="col-md-6">
    <div class="login-form">
        <div class="logo-login-register-form">
            {{>logo}}
        </div>
        <h1>{{title}}</h1>
        <form method="POST" action="/users/login">
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" name="password">
            </div>
            <div class="form-group">
                <small><a href="#">Forgot password?</a></small>
            </div>
            <button type="submit" class="btn btn-purple justify-content-end">Login</button>
        </form>
        <div class="registration-error-messsages">
            {{#if error}}
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <small>{{error}}</small>
                 </div>
            {{/if}}

            {{#if error_msg}}
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <small>{{error_msg}}</small>
                </div>
            {{/if}}
        </div>
        <div class="login-create-account">
            <a href="/users/register">Do not have an account?</a>
        </div>
    </div>
</div>

<style>
    body{
        background: #E0EAFC;  /* fallback for old browsers */
        background: -webkit-linear-gradient(to right, #CFDEF3, #E0EAFC);  /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to right, #CFDEF3, #E0EAFC); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */ 
    }
</style>
